<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base rounded card -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="14dp" />
            <solid android:color="#262638" />
        </shape>
    </item>

    <!-- Large faint circle center (neutral gray tint) -->
    <item android:gravity="center">
        <shape android:shape="oval">
            <size android:width="160dp" android:height="160dp" />
            <solid android:color="#1AFFFFFF" />
            <corners android:radius="80dp" />
        </shape>
    </item>

    <!-- Orbit rings -->
    <item android:gravity="center">
        <shape android:shape="oval">
            <size android:width="140dp" android:height="140dp" />
            <stroke android:width="1dp" android:color="#1AFFFFFF" />
        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="oval">
            <size android:width="110dp" android:height="110dp" />
            <stroke android:width="1dp" android:color="#14FFFFFF" />
        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="oval">
            <size android:width="80dp" android:height="80dp" />
            <stroke android:width="1dp" android:color="#10FFFFFF" />
        </shape>
    </item>

    <!-- Corner blobs to mimic light spots -->
    <item android:gravity="left|bottom" android:bottom="-10dp" android:left="-10dp">
        <shape android:shape="oval">
            <size android:width="80dp" android:height="80dp" />
            <solid android:color="#0DFFFFFF" />
        </shape>
    </item>
    <item android:gravity="right|top" android:right="-6dp" android:top="-6dp">
        <shape android:shape="oval">
            <size android:width="70dp" android:height="70dp" />
            <solid android:color="#0DFFFFFF" />
        </shape>
    </item>
</layer-list>
