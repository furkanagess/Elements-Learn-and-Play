<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#00141F"
    android:orientation="vertical">

    <!-- Main Card -->
    <LinearLayout
        android:id="@+id/card"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        android:background="#1C2A3E"
        android:elevation="4dp"
        android:gravity="center_vertical">

        <!-- Element Symbol (Large) -->
        <TextView
            android:id="@+id/txtSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="He"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginRight="12dp"/>

        <!-- Element Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Element Name -->
            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Helium"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Element Number -->
            <TextView
                android:id="@+id/txtNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#2"
                android:textColor="#7DDFF8"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"/>

        </LinearLayout>

        <!-- Open App Icon -->
        <ImageView
            android:id="@+id/imgOpenApp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_send"
            android:tint="#7DDFF8"/>

    </LinearLayout>

    <!-- Category Badge (Bottom) -->
    <TextView
        android:id="@+id/txtCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="#2A3952"
        android:textColor="#BFE3FF"
        android:textSize="10sp"
        android:text="Noble Gas"
        android:maxLines="1"
        android:ellipsize="end"/>

</LinearLayout>
